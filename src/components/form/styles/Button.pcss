
.button {
  padding: 10px;
  border-radius: 10px;
  cursor: pointer;
}

.inline {
  width: auto;
  display: inline-block;
}

.block {
  width: 100%;
  display: block;
}

.primary {
  color: rgb(0, 0, 0);
  background-color: rgb(125, 125, 125);
  border: 1px solid rgb(100, 100, 100);

  &:hover {
    background-color: rgb(155, 155, 155);
  }
}

.success {

}

.danger {

}

.button:disabled {
  opacity: .5;
}
